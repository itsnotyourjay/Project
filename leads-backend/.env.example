# Copy this file to .env and set secure values before starting the server
# Do NOT commit your real secrets to source control.

# JWT secret used to sign access and refresh tokens
JWT_SECRET=change_this_to_a_long_random_value

# Access token lifetime in ms (used for cookie maxAge). Default: 15 minutes
ACCESS_EXPIRES_MS=900000

# Refresh token lifetime in ms. Default: 7 days
REFRESH_EXPIRES_MS=604800000

# Database connection (example)
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_db_password
DB_NAME=leads_db

# NODE_ENV=production will make cookies Secure
# NODE_ENV=development
NODE_ENV=development
